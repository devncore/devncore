                    xmlns:ctrls="clr-namespace:DevNcore.LayoutSupport.Leagueoflegends.Controls">

    <Style TargetType="{x:Type ctrls:LucasComboBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrls:LucasComboBox}">
                    <Border Background="#FF000000"
                            BorderBrush="#1F2123"
                            BorderThickness="0 0 0 1">
                        
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>